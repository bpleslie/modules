    <preference for="Brad\Restrictions\Api\RuleRepositoryInterface" type="Brad\Restrictions\Model\RuleRepository" />

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
